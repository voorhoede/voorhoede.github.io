{
  "name": "voorhoede.github.io",
  "version": "1.0.0",
  "description": "**A collection of our open source projects, tools and best practices.**",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist/ && mkdirp dist/",
    "build": "npm run build:index && npm run build:readme",
    "build:index": "formatter README.md --output dist/index.html",
    "build:readme": "ncp README.md dist/README.md",
    "start": "http-server './dist' -c-1 -o -p 6736",
    "test": "echo \"No tests specified\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voorhoede/voorhoede.github.io.git"
  },
