  "license": "MIT",
  "bugs": {
    "url": "https://github.com/voorhoede/voorhoede.github.io/issues"
  },
  "homepage": "https://github.com/voorhoede/voorhoede.github.io#readme",
  "devDependencies": {
    "http-server": "0.9.0",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "rimraf": "2.5.4",
    "voorhoede-ocelot-formatter": "0.4.2"
  }
}
